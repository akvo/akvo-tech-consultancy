                "operationId": "getPublicQuestions",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "id": 1,
                                        "parent_id": null,
                                        "value_id": null,
